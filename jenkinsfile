def PrintHelloWorld()
{
	echo "Hello World"
}
pipeline
{
	parameters { string(name: 'Name', defaultValue: 'Amol', description: '') }
	options 
	{ 
		timestamps() 
		timeout(time: 1, unit: 'MINUTES')
	}
	agent any
	stages
	{
		stage('Stage1')
		{
			steps
			{
				echo "Hi Amol"
				sh Hello.sh
			}
		}
		stage('Sleep_Stage')
		{
			options { timeout(time: 15, unit: 'SECONDS') }
			steps
			{
				sleep(time:10,unit:"SECONDS")
				PrintHelloWorld()
			}
		}
		stage('Parameter_Stage')
		{
			input
			{
				message "Should we continue?"
                		ok "Yes, we should."					
			}
			steps
			{	
				echo "${params.Name}"
				echo "${env.BUILD_ID}"
			}
		}
	}
}
