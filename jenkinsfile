def PrintHelloWorld()
{
	echo "Hello World"
}
pipeline
{
	parameters
	{
		string(name: 'Name', defaultValue: 'Amol', description: '') 	
	}
	agent any
	stages
	{
		stage('Stage1')
		{
			steps
			{
				echo "Hi Amol"
			}
		}
		stage('Sleep_Stage')
		{
			steps
			{
				sleep(time:10,unit:"SECONDS")
				PrintHelloWorld()
			}
		}
		stage('Parameter_Stage')
		{
			steps
			{
				echo ${params.Name}
				echo ${env.BUILD_ID}
			}
		}
	}
}
