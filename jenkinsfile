def PrintHelloWorld()
{
	echo "Hello World"
}
pipeline
{
	parameters
	{
		string(name: 'Name', defaultValue: 'Amol', description: '') 	
	}
	agent any
	stages
	{
		stage('Stage1')
		{
			steps
			{
				echo "Hi Amol"
			}
		}
		stage('Sleep_Stage')
		{
			steps
			{
				sleep(time:30,unit:"SECONDS")
				PrintHelloWorld()
			}
		}
	}
}
